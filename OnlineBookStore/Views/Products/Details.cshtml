@model OnlineBookStore.Models.Product
@{
    ViewBag.Title = "Details";
}

@Html.AntiForgeryToken()
<h2 class="text-md-center mt-5">@Model.BookName</h2>

<table class="table table-hover table-bordered border-primary m-5 ">
    <thead class="bg-info">
        <tr>
            <th>Id</th>
            <th>Book Name</th>
            <th>ISBN</th>
            <th>Author Name</th>
            <th>Publisher</th>
            <th>BookType</th>
            <th>Description</th>
            <th>Price</th>
            <th>Published Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.BookName</td>
            <td>@Model.ISBN</td>
            <td>@Model.AuthorName</td>
            <td>@Model.Publisher</td>
            <td>@Model.BookType.BookTypeName</td>
            <td>@Model.Description</td>
            <td>@Model.Price</td>
            <td>@Model.PublishedDate.ToShortDateString()</td>
        </tr>

    </tbody>
</table>

